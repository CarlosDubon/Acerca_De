<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.carlos.acercade.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="125dp"
            android:src="@drawable/avatar"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_name"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:textColor="#000"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_work"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:textColor="#000"
            android:drawableLeft="@drawable/ic_school_black_24dp"
            android:drawablePadding="4dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="30dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_git"
                    android:drawableLeft="@drawable/ic_icons8_github"
                    android:textColor="#000"
                    android:drawableTint="@color/colorPrimaryDark"
                    android:layout_marginBottom="16dp"
                    android:drawablePadding="4dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_email"
                    android:textColor="#000"
                    android:drawableLeft="@drawable/ic_email_black_24dp"
                    android:drawableTint="@color/colorPrimaryDark"
                    android:layout_marginBottom="16dp"
                    android:drawablePadding="4dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_phone"
                    android:drawableLeft="@drawable/ic_icons8_whatsapp"
                    android:drawableTint="@color/colorPrimaryDark"
                    android:textColor="@color/textDark"
                    android:drawablePadding="4dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|bottom">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="powered by: DebugProjects"
                android:textSize="14sp"
                android:drawableLeft="@drawable/ic_bug_report_black_24dp"
                android:layout_gravity="center_horizontal"
                android:drawableTint="@color/textOpacity"
                />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
